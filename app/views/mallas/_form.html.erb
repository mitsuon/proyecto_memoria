<%= form_for(@malla) do |f| %>

  <% if @malla.errors.any? %>
   <div id="error_explanation">
    <ul>
     <% @malla.errors.full_messages.each do |message| %>
     <li><%= message %></li>
     <% end %>
    </ul>
   </div>
<% end %>

  <div class="field">
    <%= f.label :plan %><br>
    <%= f.text_field :plan %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
