<%= form_for(@carrera) do |f| %>
  <% if @carrera.errors.any? %>
     <div id="error_explanation">
      <ul>
       <% @carrera.errors.full_messages.each do |message| %>
       <li><%= message %></li>
       <% end %>
      </ul>
     </div>
  <% end %>

  <div class="field">
    <%= f.label :nombre %><br>
    <%= f.text_field :nombre %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


